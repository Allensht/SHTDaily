{
  "private": true,
  "author": "Allensht <swhatw442@qq.com>",
  "version": "0.3.5",
  "name": "SHTDaily",
  "main": "./main/index.js",
  "scripts": {
    "build": "max build",
    "dev": "max dev",
    "postinstall": "max setup",
    "setup": "max setup",
    "start": "concurrently \"npm run dev\" \"wait-on http://localhost:8000 && electron .\"",
    "build-win64": "npm run build && electron-builder --win --x64"
  },
  "build": {
    "productName": "SHTDaily",
    "appId": "com.allensht.shtdaily",
    "copyright": "Copyright Â© 2024 Allensht",
    "directories": {
      "output": "build"
    },
    "win": {
      "icon": "./icons/win/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": "x64"
        }
      ]
    },
    "files": [
      "dist/**/*",
      "main/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./icons/win/icon.ico",
      "uninstallerIcon": "./icons/win/icon.ico",
      "installerHeaderIcon": "./icons/win/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SHTDaily"
    }
  },
  "dependencies": {
    "@ant-design/icons": "^5.0.1",
    "@ant-design/pro-components": "^2.4.4",
    "@umijs/max": "^4.3.10",
    "ahooks": "^3.8.0",
    "antd": "^5.4.0",
    "axios": "^1.7.2",
    "dayjs": "^1.11.12",
    "mac-scrollbar": "^0.13.6",
    "modern-screenshot": "^4.4.39",
    "react-typewriter-hook": "^1.0.2"
  },
  "devDependencies": {
    "@types/react": "^18.0.33",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "concurrently": "^8.2.2",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "prettier": "^3.3.3",
    "typescript": "^5.0.3",
    "wait-on": "^7.2.0"
  }
}
